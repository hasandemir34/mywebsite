@model mywebsite.Models.Project

@{
    ViewData["Title"] = "Projeyi Düzenle";
}

<div class="row justify-content-center py-5">
    <div class="col-md-8">
        <div class="card shadow border-0 p-4">
            <h2 class="mb-4 text-warning"><i class="fas fa-edit me-2"></i>Projeyi Düzenle</h2>
            
            <form asp-controller="Project" asp-action="Guncelle" method="post">
                @* KRİTİK: ID'yi gizli olarak göndermeliyiz ki sistem hangi projeyi güncelleyeceğini bilsin *@
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Proje Adı</label>
                    <input asp-for="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Kategori</label>
                    <select asp-for="Category" class="form-select" required>
                        <option value="web">Web Geliştirme</option>
                        <option value="mobile">Mobil Uygulama</option>
                        <option value="ai">AI / ML</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Kısa Açıklama</label>
                    <input asp-for="Description" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Kullanılan Teknolojiler</label>
                    <input asp-for="Technologies" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">GitHub Linki</label>
                    <input asp-for="GithubLink" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Proje Detay İçeriği</label>
                    <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning flex-grow-1 fw-bold">Değişiklikleri Kaydet</button>
                    <a asp-controller="Project" asp-action="Index" class="btn btn-secondary px-4">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>