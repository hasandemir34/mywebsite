@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold">Merhaba, Ben Hasan</h1>
    <p class="lead">Yazılım mühendisliği öğrencisiyim. Burada projelerimi ve öğrendiklerimi paylaşıyorum.</p>
    <hr class="my-4">
    <div class="d-flex justify-content-center gap-3">
    <a asp-controller="Project" asp-action="Index" class="btn btn-primary btn-lg">Projelerimi Gör</a>
    <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-dark btn-lg">Blog Sayfam</a>
    </div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-md-10 col-lg-9">
        <div class="p-4 bg-white rounded shadow border">
            <h5 class="mb-4 text-center fw-bold">Aktivite Paylaşım Geçmişi</h5>
            
            <div class="d-flex flex-wrap gap-1 justify-content-center mx-auto" style="max-width: 850px;">
                @{
                    var bugun = DateTime.Now.Date;
                    var counts = ViewBag.BlogCounts as Dictionary<DateTime, int> ?? new Dictionary<DateTime, int>();

                    for (int i = 364; i >= 0; i--)
                    {
                        var suanKiTarih = bugun.AddDays(-i);
                        int yaziSayisi = counts.ContainsKey(suanKiTarih) ? counts[suanKiTarih] : 0;

                        // Yazı sayısına göre geliştirilmiş renk geçişleri
                        string renkTonu = yaziSayisi switch
                        {
                            0 => "#ebedf0", // Hiç yok
                            1 => "#9be9a8", // Az (1 Yazı)
                            2 => "#40c463", // Orta-Az (2 Yazı)
                            3 => "#30a14e", // Orta-Yoğun (3 Yazı)
                            4 => "#216e39", // Yoğun (4 Yazı)
                            _ => "#194322"  // Çok Yoğun (5+ Yazı)
                        };

                        <div style="width: 12px; height: 12px; background-color: @renkTonu; border-radius: 2px;"
                             title="@suanKiTarih.ToShortDateString(): @yaziSayisi paylaşım">
                        </div>
                    }
                }
            </div>
            
            <div class="mt-3 d-flex justify-content-center align-items-center gap-2 small text-muted">
                <span>0</span>
                <div style="width: 10px; height: 10px; background-color: #ebedf0; border-radius: 2px;"></div>
                <div style="width: 10px; height: 10px; background-color: #9be9a8; border-radius: 2px;"></div>
                <div style="width: 10px; height: 10px; background-color: #40c463; border-radius: 2px;"></div>
                <div style="width: 10px; height: 10px; background-color: #30a14e; border-radius: 2px;"></div>
                <div style="width: 10px; height: 10px; background-color: #216e39; border-radius: 2px;"></div>
                <div style="width: 10px; height: 10px; background-color: #194322; border-radius: 2px;"></div>
                <span>5+</span>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>Teknoloji</h3>
            <p>Modern web teknolojileri ve veri bilimi üzerine çalışıyorum.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>Günlük</h3>
            <p>Sürekli öğrenme sürecimi ve günlük notlarımı burada tutuyorum.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>İletişim</h3>
            <p>Bana sosyal medya hesaplarım üzerinden ulaşabilirsiniz.</p>
        </div>
    </div>
</div>