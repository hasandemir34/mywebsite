@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold">Merhaba, Ben Hasan</h1>
    <p class="lead">Yazılım mühendisliği öğrencisiyim. Burada projelerimi ve öğrendiklerimi paylaşıyorum.</p>
    <hr class="my-4">
    <div class="d-flex justify-content-center gap-3">
        <a asp-action="Projelerim" class="btn btn-primary btn-lg">Projelerimi Gör</a>
        <a asp-action="Gunluk" class="btn btn-outline-dark btn-lg">Blog Sayfam</a>
    </div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-md-10 col-lg-9">
        <div class="p-4 bg-white rounded shadow border">
            <h5 class="mb-4 text-center fw-bold">Yazı Paylaşım Geçmişi</h5>
            
            <div class="d-flex flex-wrap gap-1 justify-content-center mx-auto" style="max-width: 850px;">
                @{
                    var bugun = DateTime.Now.Date;
                    var counts = ViewBag.BlogCounts as Dictionary<DateTime, int> ?? new Dictionary<DateTime, int>();

                    for (int i = 364; i >= 0; i--)
                    {
                        var suanKiTarih = bugun.AddDays(-i);
                        int yaziSayisi = counts.ContainsKey(suanKiTarih) ? counts[suanKiTarih] : 0;

                        // Yazı sayısına göre renk tonları
                        string renkSinifi = yaziSayisi switch
                        {
                            0 => "#ebedf0",
                            1 => "#9be9a8",
                            2 => "#40c463",
                            _ => "#216e39"
                        };

                        <div style="width: 12px; height: 12px; background-color: @renkSinifi; border-radius: 2px;"
                             title="@suanKiTarih.ToShortDateString(): @yaziSayisi yazı">
                        </div>
                    }
                }
            </div>
            
            <div class="mt-3 text-center small text-muted">
                Son 1 yıla ait paylaşım aktivitesi
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>Teknoloji</h3>
            <p>Modern web teknolojileri ve veri bilimi üzerine çalışıyorum.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>Günlük</h3>
            <p>Sürekli öğrenme sürecimi ve günlük notlarımı burada tutuyorum.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm p-3">
            <h3>İletişim</h3>
            <p>Bana LinkedIn veya GitHub üzerinden ulaşabilirsiniz.</p>
        </div>
    </div>
</div>