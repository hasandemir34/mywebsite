@model mywebsite.Models.Blog

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            @* Geri Dönüş Linki *@
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Gunluk" class="text-decoration-none">Blog</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>

            <article class="blog-post card shadow-sm border-0 p-4 p-lg-5">
                <header class="mb-4 border-bottom pb-3">
                    <h1 class="display-5 fw-bold text-dark">@Model.Title</h1>
                    <div class="text-muted small mt-2">
                        <i class="fas fa-calendar-alt me-2"></i>@Model.CreatedDate.ToString("dd MMMM yyyy")
                        <span class="mx-2">|</span>
                        <i class="fas fa-user me-2"></i>Hasan Demir
                    </div>
                </header>

                <section class="blog-content lead" style="white-space: pre-line; line-height: 1.8; color: #333;">
                    @Model.Content
                </section>

                <footer class="mt-5 pt-4 border-top">
                    <a asp-action="Gunluk" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Diğer Yazılara Göz At
                    </a>
                </footer>
            </article>
        </div>
    </div>
</div>