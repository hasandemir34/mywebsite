@model mywebsite.Models.About

@{
    ViewData["Title"] = "Hakkımda";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 px-4 py-5">
            @if (Model == null)
            {
                <div class="text-center">
                    <i class="fas fa-info-circle fa-3x text-secondary mb-3"></i>
                    <p class="text-muted">Hakkımda bilgileri henüz eklenmemiş. Lütfen admin girişi yaparak bilgileri doldurun.</p>
                </div>
            }
            else
            {
                <div class="text-center mb-4">
                    <i class="fas fa-user-graduate fa-4x text-primary mb-3"></i>
                    <h2 class="fw-bold">Merhaba, Ben @Model.FullName</h2>
                    <p class="text-muted">@Model.Title</p>
                </div>

                <div class="content">
                    <h4 class="border-bottom pb-2">Eğitim</h4>
                    <p>
                        <strong>@Model.University</strong>
                    </p>

                    <h4 class="border-bottom pb-2 mt-4">İlgi Alanları & Yetenekler</h4>
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        @if (!string.IsNullOrEmpty(Model.Skills))
                        {
                            @foreach (var skill in Model.Skills.Split(','))
                            {
                                <span class="badge bg-dark">@skill.Trim()</span>
                            }
                        }
                    </div>
                    
                    <p style="white-space: pre-line;">
                        @Model.Description
                    </p>

                    <h4 class="border-bottom pb-2 mt-4">İletişim</h4>
                    <p>
                        Benimle sosyal medya hesaplarım üzerinden veya e-posta yoluyla iletişime geçebilirsiniz.
                    </p>
                </div>
            }
        </div>
    </div>
</div>