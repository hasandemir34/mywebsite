@model mywebsite.Models.About

<div class="row justify-content-center py-5">
    <div class="col-md-8">
        <div class="card shadow border-0 p-4">
            <h2 class="text-primary mb-4"><i class="fas fa-user-edit me-2"></i>Hakkımda Bilgilerini Düzenle</h2>
            <form asp-action="HakkimdaGuncelle" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" placeholder="Hasan Demir" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Unvan</label>
                    <input asp-for="Title" class="form-control" placeholder="Yazılım Mühendisliği Öğrencisi" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Eğitim Bilgisi</label>
                    <input asp-for="University" class="form-control" placeholder="Sakarya Üniversitesi..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Yetenekler (Virgülle ayırın)</label>
                    <input asp-for="Skills" class="form-control" placeholder="C#, SQL, Python..." />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Biyografi</label>
                    <textarea asp-for="Description" class="form-control" rows="6" required></textarea>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Bilgileri Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>