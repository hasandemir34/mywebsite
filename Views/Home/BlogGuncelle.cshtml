@model mywebsite.Models.Blog

@{
    ViewData["Title"] = "Yazıyı Düzenle";
}

<div class="row justify-content-center py-5">
    <div class="col-md-9">
        <div class="card shadow border-0 p-4">
            <h2 class="mb-4 text-warning"><i class="fas fa-pen-fancy me-2"></i>Blog Yazısını Düzenle</h2>
            
            <form asp-action="BlogGuncelle" method="post">
                <input type="hidden" asp-for="Id" />
                @* Tarihi de gizli gönderelim ki değişmesin *@
                <input type="hidden" asp-for="CreatedDate" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Yazı Başlığı</label>
                    <input asp-for="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Yazı İçeriği</label>
                    <textarea asp-for="Content" class="form-control" rows="15" required></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning flex-grow-1 fw-bold">Güncelle ve Yayınla</button>
                    <a asp-action="Gunluk" class="btn btn-secondary px-4">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>