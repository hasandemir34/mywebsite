@model List<mywebsite.Models.Blog>

@{
    ViewData["Title"] = "Günlük";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Yazılım Günlüğüm</h1>
            <p class="lead text-muted">Öğrendiklerim ve notlarım.</p>
        </div>
    </div>

    <div class="row">
        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                Henüz hiç yazı eklenmemiş.
            </div>
        }
        else
        {
            @foreach (var yazi in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@yazi.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                @yazi.CreatedDate.ToString("dd MMMM yyyy")
                            </h6>
                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(yazi.Content) && yazi.Content.Length > 100)
                                {
                                    @yazi.Content.Substring(0, 100) <text>...</text>
                                }
                                else
                                {
                                    @yazi.Content
                                }
                            </p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Tamamını Oku</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>