@model mywebsite.Models.Blog

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            @* Geri Dönüş Linki *@
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Gunluk" class="text-decoration-none">Blog</a></li>
                    <li class="breadcrumb-item active">@Model.Title</li>
                </ol>
            </nav>

            <article class="blog-post card shadow-sm border-0 p-4 p-lg-5">
                
                @* Kapak Fotoğrafı Görüntüleme *@
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="text-center mb-4">
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" style="max-height: 400px; width: 100%; object-fit: cover;" alt="@Model.Title">
                    </div>
                }

                <header class="mb-4 border-bottom pb-3">
                    <h1 class="display-5 fw-bold text-dark">@Model.Title</h1>
                    <div class="text-muted small mt-2">
                        <i class="fas fa-calendar-alt me-2"></i>@Model.CreatedDate.ToString("dd MMMM yyyy")
                        <span class="mx-2">|</span>
                        <i class="fas fa-user me-2"></i>Hasan Demir
                    </div>
                </header>

                @* KRİTİK NOKTA: HTML İçeriği Görüntüleme *@
                <section class="blog-content lead" style="line-height: 1.8; color: #333;">
                    @* Html.Raw kullanıldığında tarayıcı etiketleri (p, b, img) kod olarak değil, görsel öğe olarak işler *@
                    @Html.Raw(Model.Content)
                </section>

                <footer class="mt-5 pt-4 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Gunluk" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Diğer Yazılara Göz At
                        </a>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-action="BlogGuncelle" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Yazıyı Düzenle
                            </a>
                        }
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>