@model mywebsite.Models.Blog

@{
    ViewData["Title"] = "Yeni Yazı Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0 p-4">
                <h2 class="mb-4 text-success"><i class="fas fa-plus-circle me-2"></i>Yeni Blog Yazısı Ekle</h2>
                
                <form asp-controller="Blog" asp-action="Ekle" method="post" enctype="multipart/form-data">
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Yazı Başlığı</label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık giriniz..." required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Kapak Fotoğrafı</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <small class="text-muted">Yazınız için profesyonel bir kapak görseli seçin.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Yazı İçeriği</label>
                        <textarea asp-for="Content" id="Content" class="form-control" rows="10"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success flex-grow-1 fw-bold">Yayınla ve Paylaş</button>
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary px-4">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Content'))
            .catch(error => {
                console.error(error);
            });
    </script>
}